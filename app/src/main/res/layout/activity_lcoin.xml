<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".ui.my.activity.LCoinActivity">

    <RelativeLayout
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:padding="@dimen/dp_15">

        <RelativeLayout
            android:id="@+id/rl_finish"
            android:layout_width="@dimen/dp_15"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_black_finish" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/lb"
            android:textColor="@color/color_161824"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/color_161824"
            android:textSize="@dimen/dp_16"
            android:text="@string/detail"
            />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/bg_gradient_yellow"
                android:layout_height="@dimen/dp_120">

                <ImageView
                    android:id="@+id/iv_coin"
                    android:layout_marginStart="@dimen/dp_30"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_coin"/>
                <TextView
                    android:id="@+id/tv_coin"
                    android:layout_width="wrap_content"
                    android:layout_toEndOf="@id/iv_coin"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:textSize="@dimen/sp_26"
                    tools:text="132"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/tv_cash"
                    android:layout_toEndOf="@id/tv_coin"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_radius3_ff80b2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    tools:text="约13.2元"
                    />

                <TextView
                    android:id="@+id/tv_lb_ratio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_coin"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginStart="@dimen/dp_30"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    android:text="@string/bi_rmb"
                    />

                <TextView
                    android:id="@+id/tv_exchange"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_24"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/dp_36"
                    android:background="@drawable/shape_left_radius_change"
                    android:layout_alignParentEnd="true"
                    android:drawableEnd="@drawable/ic_white_finish_right"
                    android:paddingEnd="@dimen/dp_9"
                    android:paddingStart="@dimen/dp_9"
                    android:textSize="@dimen/sp_12"
                    android:text="@string/exchange"
                    />
            </RelativeLayout>
            
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_img"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/dp_5"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="-35dp"
                android:layout_height="wrap_content"
                tools:targetApi="lollipop">
            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@drawable/shape_white_bg"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_05"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp_12"
                        android:layout_toStartOf="@id/tv_lb_use"
                        android:background="@color/color_ec"/>
                    <TextView
                        android:id="@+id/tv_lb_use"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/color_303133"
                        android:textSize="@dimen/sp_14"
                        android:drawableStart="@drawable/ic_lb_use"
                        android:drawablePadding="@dimen/dp_5"
                        android:text="@string/lb_use"/>
                    <View
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_05"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_12"
                        android:layout_toEndOf="@id/tv_lb_use"
                        android:background="@color/color_ec"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_shop"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_lb_shop"/>
                    <View
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="match_parent"
                        />
                    <ImageView
                        android:id="@+id/iv_anchor"
                        android:layout_width="0dp"
                        android:scaleType="fitXY"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/ic_exceptional_anchor"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@drawable/shape_white_bg"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_05"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp_12"
                        android:layout_toStartOf="@id/tv_lb_task"
                        android:background="@color/color_ec"/>
                    <TextView
                        android:id="@+id/tv_lb_task"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/color_303133"
                        android:textSize="@dimen/sp_14"
                        android:drawableStart="@drawable/ic_lb_task"
                        android:drawablePadding="@dimen/dp_5"
                        android:text="@string/lb_task"/>
                    <View
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_05"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_12"
                        android:layout_toEndOf="@id/tv_lb_task"
                        android:background="@color/color_ec"/>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_task"
                    android:layout_width="match_parent"
                    android:nestedScrollingEnabled="false"
                    android:layout_height="wrap_content"
                    tools:targetApi="lollipop">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>