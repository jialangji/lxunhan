<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".ui.my.activity.HistoryActivity">

    <RelativeLayout
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:background="@drawable/bg_gradient"
        android:padding="@dimen/dp_15"
        android:layout_height="@dimen/dp_50">
        <RelativeLayout
            android:id="@+id/rl_finish"
            android:layout_width="@dimen/dp_15"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_write_finish"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_16"
            android:text="@string/collect"/>
    </RelativeLayout>

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tl_label"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        app:tl_indicator_color="@color/color_fc5a8e"
        app:tl_indicator_height="@dimen/dp_2"
        app:tl_indicator_width="@dimen/dp_20"
        app:tl_tab_space_equal="true"
        app:tl_indicator_width_equal_title="true"
        app:tl_textSelectColor="@color/color_303133"
        app:tl_textUnselectColor="@color/color_9"
        app:tl_textsize="@dimen/sp_16" />
    <com.ay.lxunhan.widget.NoScrollViewPager
        android:id="@+id/view_page_collect"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.ay.lxunhan.widget.NoScrollViewPager>
</LinearLayout>