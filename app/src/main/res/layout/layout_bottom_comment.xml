<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:paddingStart="@dimen/dp_15"
        android:orientation="horizontal"
        android:background="@color/color_fa"
        android:paddingEnd="@dimen/dp_15">

        <EditText
            android:id="@+id/et_comment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_white_bg"
            android:hint="@string/write_comment"
            android:imeOptions="actionSend"
            android:inputType="text"
            android:paddingStart="@dimen/dp_13"
            android:paddingEnd="@dimen/dp_10"
            android:drawableStart="@drawable/ic_small_edit"
            android:textColor="@color/color_303133"
            android:textColorHint="@color/color_303133"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:id="@+id/ll_moreLike"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:src="@drawable/ic_unlike_black"/>
            <TextView
                android:id="@+id/tv_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_303133"
                tools:text="235"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_303133"
            android:layout_marginStart="@dimen/dp_20"
            android:drawablePadding="@dimen/dp_4"
            android:drawableStart="@drawable/ic_wechat_black"
            android:text="@string/wechat_share"/>
    </LinearLayout>

</LinearLayout>