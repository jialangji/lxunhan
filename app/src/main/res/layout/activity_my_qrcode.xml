<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    android:layout_height="match_parent"
    tools:context=".ui.public_ac.activity.MyQrcodeActivity">
    <RelativeLayout
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:background="@drawable/bg_gradient"
        android:padding="@dimen/dp_15"
        android:layout_height="@dimen/dp_50">
        <RelativeLayout
            android:id="@+id/rl_finish"
            android:layout_width="@dimen/dp_15"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_write_finish"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_16"
            android:text="@string/my_qrcode2"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/ic_qrcode_bg"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_100"
        android:orientation="vertical"
        android:layout_height="@dimen/dp_373">

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="@dimen/dp_15"
            android:paddingStart="@dimen/dp_25"
            android:paddingEnd="@dimen/dp_25"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_header"
                android:layout_width="@dimen/dp_49"
                android:layout_height="@dimen/dp_49"
                android:src="@drawable/ic_my_select"
                />
            <LinearLayout
                android:layout_marginStart="@dimen/dp_8"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_303133"
                        android:text="张三"
                        android:textSize="@dimen/sp_22"
                        />
                    <ImageView
                        android:id="@+id/iv_sex"
                        android:layout_toEndOf="@id/tv_name"
                        android:layout_marginStart="@dimen/dp_4"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_woman"
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:text="上山打老虎"
                    android:textColor="@color/color_b2"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_25"
            android:background="@drawable/ic_qrcode_point_line"/>


        <ImageView
            android:id="@+id/iv_qrcode"
            android:layout_width="@dimen/dp_230"
            android:layout_height="@dimen/dp_230"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_b2"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/use_app_scan"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/ll_save_album"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_26"
            android:src="@drawable/ic_album" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:text="@string/save_album"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>