<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.my.activity.ExChangeActivity">
    <RelativeLayout
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="@dimen/dp_15"
        android:layout_height="@dimen/dp_50">
        <RelativeLayout
            android:id="@+id/rl_finish"
            android:layout_width="@dimen/dp_15"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_black_finish"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_303133"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_16"
            android:text="@string/i_want_exchange"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:padding="@dimen/dp_15"
        android:background="@drawable/shape_white_bg"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_b2"
                android:text="@string/current_lb"/>

            <TextView
                android:layout_width="@dimen/dp_68"
                android:layout_height="@dimen/dp_30"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/sp_12"
                android:text="@string/exchange_record"
                android:textColor="@color/color_303133"
                android:background="@drawable/shape_grayec_line"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_lb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_20"
                android:text="1302"
                android:textColor="@color/color_303133"
                />
            <TextView
                android:id="@+id/tv_cash"
                android:layout_toEndOf="@id/tv_lb"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dp_3"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_radius3_ff80b2"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"
                android:text="约13.2元"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_15"
        android:padding="@dimen/dp_15"
        android:background="@drawable/shape_white_bg"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_303133"
            android:text="@string/withdraw_type"/>

        <LinearLayout
            android:id="@+id/ll_alipay"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:src="@drawable/ic_alipay"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_10"
                android:textColor="@color/color_b2"
                android:textSize="@dimen/sp_12"
                android:text="@string/withdraw_to_alipay"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <CheckBox
                android:id="@+id/check_alipay"
                android:button="@drawable/selector_check_two"
                android:enabled="false"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_ec"/>
        <LinearLayout
            android:id="@+id/ll_wx"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:src="@drawable/ic_wxpay"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_10"
                android:textColor="@color/color_b2"
                android:textSize="@dimen/sp_12"
                android:text="@string/withdraw_to_wx"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <CheckBox
                android:id="@+id/check_wx"
                android:button="@drawable/selector_check_two"
                android:enabled="false"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>