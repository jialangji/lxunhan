<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg_color"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/ic_home_bg"
        android:layout_height="@dimen/dp_190">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:padding="@dimen/dp_15">
            <ImageView
                android:id="@+id/iv_scan"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@drawable/ic_scan"/>

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_setting" />

            <ImageView
                android:id="@+id/iv_time_change"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_24"
                android:layout_toStartOf="@id/iv_setting"
                android:src="@drawable/ic_time_change" />

            <ImageView
                android:id="@+id/iv_language"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_24"
                android:layout_toStartOf="@id/iv_time_change"
                android:src="@drawable/ic_language" />
        </RelativeLayout>

    </LinearLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="-140dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_140">
                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white" />
                <!--<TextView-->
                    <!--android:id="@+id/tv_percent"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_below="@id/tv_money"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:layout_marginTop="@dimen/dp_4"-->
                    <!--android:drawableEnd="@drawable/ic_yellow_up"-->
                    <!--android:drawablePadding="@dimen/dp_6"-->
                    <!--android:text="+150.00(22.1%)"-->
                    <!--android:textColor="@color/white"-->
                    <!--android:textSize="@dimen/sp_14" />-->

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="-70dp"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@drawable/bottom_layer"
                android:paddingBottom="@dimen/dp_4">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_radius_10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/dp_145"
                        android:paddingTop="@dimen/dp_15"
                        android:paddingEnd="@dimen/dp_15">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="张三"
                                android:textColor="@color/color_303133"
                                android:textSize="@dimen/sp_16" />

                            <ImageView
                                android:id="@+id/iv_sex"
                                android:layout_width="@dimen/dp_12"
                                android:layout_height="@dimen/dp_12"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/dp_4"
                                android:layout_toEndOf="@id/tv_name"
                                android:src="@drawable/ic_woman" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_intro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="Finally A Top Secret Way You Ca…"
                            android:textColor="@color/color_b2"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_like"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_like_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="78"
                                android:textColor="@color/color_303133"
                                android:textSize="@dimen/sp_16" />
                            <TextView
                                android:layout_marginTop="@dimen/dp_3"
                                android:layout_width="wrap_content"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/color_b2"
                                android:layout_height="wrap_content"
                                android:text="@string/like"/>
                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/dp_05"
                            android:layout_height="@dimen/dp_26"
                            android:layout_gravity="center"
                            android:background="@color/color_ec" />

                        <LinearLayout
                            android:id="@+id/ll_fans"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_fans_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="78"
                                android:textColor="@color/color_303133"
                                android:textSize="@dimen/sp_16" />
                            <TextView
                                android:layout_marginTop="@dimen/dp_3"
                                android:layout_width="wrap_content"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/color_b2"
                                android:layout_height="wrap_content"
                                android:text="@string/fans"/>
                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/dp_05"
                            android:layout_height="@dimen/dp_26"
                            android:layout_gravity="center"
                            android:background="@color/color_ec" />

                        <LinearLayout
                            android:id="@+id/ll_attention"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_attention_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="78"
                                android:textColor="@color/color_303133"
                                android:textSize="@dimen/sp_16" />
                            <TextView
                                android:layout_marginTop="@dimen/dp_3"
                                android:layout_width="wrap_content"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/color_b2"
                                android:layout_height="wrap_content"
                                android:text="@string/attention"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_header"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="-190dp"
                android:src="@drawable/ic_my_select" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_105"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:background="@drawable/shape_radius_10"
                android:layout_height="@dimen/dp_75">

                <LinearLayout
                    android:id="@+id/ll_sing"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:src="@drawable/ic_sing"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/dp_13"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_16"
                            android:textColor="@color/color_303133"
                            android:text="@string/sing_in"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_b2"
                            android:textSize="@dimen/sp_12"
                            android:text="@string/come_sing"/>
                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="@dimen/dp_05"
                    android:layout_height="@dimen/dp_26"
                    android:layout_gravity="center"
                    android:background="@color/color_ec" />
                <LinearLayout
                    android:id="@+id/ll_invite"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:src="@drawable/ic_invite"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/dp_13"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_16"
                            android:textColor="@color/color_303133"
                            android:text="@string/invite_friend"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_b2"
                            android:textSize="@dimen/sp_12"
                            android:text="@string/invite_desc"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_lb"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_13"
                android:orientation="horizontal"
                android:background="@drawable/shape_radius_10"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_height="@dimen/dp_68">
                <ImageView
                    android:id="@+id/iv_lb"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_15"
                    android:src="@drawable/ic_lb"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_gravity="center_vertical"
                    android:text="@string/lb"
                    android:textColor="@color/color_303133"
                    android:textSize="@dimen/sp_16" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <RelativeLayout
                    android:layout_width="@dimen/dp_72"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="@dimen/dp_72"
                        android:background="@drawable/ic_chart_line"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tv_lb_bfb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:text="+8.56%"
                        android:drawablePadding="@dimen/dp_2"
                        android:textColor="@color/color_303133"
                        android:textSize="@dimen/sp_10"
                        android:drawableEnd="@drawable/ic_pink_up"/>

                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_wallet"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_13"
                android:background="@drawable/shape_radius_10"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_height="@dimen/dp_68">
                <ImageView
                    android:id="@+id/iv_wallet"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_money"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iv_wallet"
                    android:layout_marginStart="@dimen/dp_15"
                    android:text="@string/wallet"
                    android:textColor="@color/color_303133"
                    android:textSize="@dimen/sp_16"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_finish_right"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_notification"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_13"
                android:background="@drawable/shape_radius_10"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_height="@dimen/dp_68">
                <ImageView
                    android:id="@+id/iv_notification"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_notification"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iv_notification"
                    android:layout_marginStart="@dimen/dp_15"
                    android:text="@string/notification"
                    android:textColor="@color/color_303133"
                    android:textSize="@dimen/sp_16"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_finish_right"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_history"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_13"
                android:background="@drawable/shape_radius_10"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_height="@dimen/dp_68">
                <ImageView
                    android:id="@+id/iv_history"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_history"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iv_history"
                    android:layout_marginStart="@dimen/dp_15"
                    android:text="@string/history"
                    android:textColor="@color/color_303133"
                    android:textSize="@dimen/sp_16"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_finish_right"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_collect"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_13"
                android:background="@drawable/shape_radius_10"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_height="@dimen/dp_68">
                <ImageView
                    android:id="@+id/iv_collect"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_collect"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iv_collect"
                    android:layout_marginStart="@dimen/dp_15"
                    android:text="@string/collect"
                    android:textColor="@color/color_303133"
                    android:textSize="@dimen/sp_16"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_finish_right"/>
            </RelativeLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>