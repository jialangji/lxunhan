<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/dp_15"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_type_img"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/ic_lb_task"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_toEndOf="@id/iv_type_img"
            android:layout_marginStart="@dimen/dp_10"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_type_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_303133"
                    android:text="关注话题"/>

                <TextView
                    android:id="@+id/tv_type_lb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_ff8b02"
                    android:text="20乐币"
                    android:layout_marginStart="@dimen/dp_15"
                    android:textSize="@dimen/sp_12"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:id="@+id/progressBarSmall"
                    android:layout_marginTop="@dimen/dp_5"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/dp_42"
                    android:max="5"
                    android:progressDrawable="@drawable/progress_bg"
                    android:layout_height="@dimen/dp_6"/>

                <TextView
                    android:id="@+id/tv_success_count"
                    android:layout_marginStart="@dimen/dp_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_10"
                    android:text="0"
                    android:textColor="@color/color_fc5a8e"/>
                <TextView
                    android:id="@+id/tv_all_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_78"
                    android:textSize="@dimen/sp_10"
                    android:text="/5"
                    />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/attention"
            android:textColor="@color/color_fc5a8e"
            android:textSize="@dimen/sp_10"
            android:background="@drawable/shape_radius_pink_line"
            />

    </RelativeLayout>

</LinearLayout>