<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/sp_12"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:padding="@dimen/dp_15"
        android:background="@drawable/shape_white_bg_10"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46">

            <RelativeLayout
                android:id="@+id/rl_iv"
                android:layout_width="@dimen/dp_46"
                android:layout_height="@dimen/dp_46"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/iv_header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_my_select" />

                <ImageView
                    android:id="@+id/iv_v"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_8"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/ic_yellow_v" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_toEndOf="@id/rl_iv"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三"
                        android:textColor="@color/color_303133"
                        android:textSize="@dimen/sp_16" />

                    <ImageView
                        android:id="@+id/iv_sex"
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_4"
                        android:layout_toEndOf="@id/tv_name"
                        android:src="@drawable/ic_woman" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上山打老虎"
                    android:textColor="@color/color_b2"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_attention"
                android:layout_width="@dimen/dp_56"
                android:layout_height="@dimen/dp_28"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_line"
                android:gravity="center"
                android:text="@string/add_attention"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/color_fc5a8e" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>