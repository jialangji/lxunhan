<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.public_ac.SearchResultActivity">
    <RelativeLayout
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">
        <RelativeLayout
            android:id="@+id/rl_finish"
            android:layout_width="@dimen/dp_15"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_gray_finish"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_search"
            android:layout_width="match_parent"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/shape_white_bg_4"
            android:layout_toEndOf="@id/rl_finish"
            android:paddingStart="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_7"
            android:paddingEnd="@dimen/dp_10"
            android:layout_toStartOf="@id/iv_edit"
            android:layout_height="@dimen/dp_36">

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_height="@dimen/dp_16"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_search"/>

            <EditText
                android:id="@+id/et_search"
                android:layout_toEndOf="@id/iv_search"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_height="match_parent"
                android:background="@null"
                android:maxLength="20"
                android:singleLine="true"
                android:textSize="@dimen/sp_12"
                android:imeOptions="actionSearch"
                android:textColor="@color/color_303133"
                android:textColorHint="@color/color_d7d7d7"
                android:hint="@string/hot_new"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/iv_edit"
            android:layout_width="@dimen/dp_36"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:textColor="@color/color_fc5a8e"
            android:textSize="@dimen/sp_16"
            android:text="@string/sousuo" />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_label"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        app:tabPaddingStart="12dp"
        app:tabPaddingEnd="8dp"
        app:tabMaxWidth="100dp"
        app:tabGravity="center"
        app:tabIndicatorFullWidth="false"
        app:tabRippleColor="@android:color/transparent"
        app:tabSelectedTextColor="@color/color_303133"
        app:tabTextAppearance="@style/TabTextSize"
        app:tabTextColor="@color/color_9">

    </android.support.design.widget.TabLayout>
    <com.ay.lxunhan.widget.NoScrollViewPager
        android:id="@+id/view_page_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.ay.lxunhan.widget.NoScrollViewPager>
</LinearLayout>