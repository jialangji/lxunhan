<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.CompleteInfoActivity">
    <view
        android:id="@+id/pv_view"
        class="com.ay.lxunhan.widget.bg.ParticleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:pv_background="@drawable/ic_login_bg" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/view_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                android:layout_centerInParent="true"
                android:text="@string/complete_info"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_50"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@null"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_0"
                android:textSize="@dimen/sp_14"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:hint="@string/enter_name"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_05"
                android:background="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_select"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_50"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/et_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_0"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textColorHint="@color/white"
                android:textSize="@dimen/sp_14"
                android:text="@string/select_birth_date"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_05"
                android:background="@color/white"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_girl"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <CheckBox
                    android:id="@+id/check_girl"
                    android:button="@drawable/selector_check"
                    android:enabled="false"
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:drawableStart="@drawable/ic_woman"
                    android:drawablePadding="@dimen/dp_4"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textSize="@dimen/sp_14"
                    android:text="@string/girl"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_boy"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="match_parent">
                <CheckBox
                    android:id="@+id/check_boy"
                    android:layout_width="wrap_content"
                    android:enabled="false"
                    android:clickable="false"
                    android:button="@drawable/selector_check"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:drawableStart="@drawable/ic_man"
                    android:drawablePadding="@dimen/dp_4"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textSize="@dimen/sp_14"
                    android:text="@string/boy"/>
            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/dp_60"
            android:layout_marginEnd="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:background="@drawable/shape_white10"
            android:text="@string/sure"/>

    </LinearLayout>

</RelativeLayout>