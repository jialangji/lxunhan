<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_78"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_white_bg_10"
        android:padding="@dimen/dp_15">

        <RelativeLayout
            android:id="@+id/rl_user"
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_46">

            <ImageView
                android:id="@+id/iv_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_my_select" />

            <ImageView
                android:id="@+id/iv_v"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_yellow_v" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/sp_16"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColorHint="@color/color_303133"
                    tools:text="hhhhh"/>
                <ImageView
                    android:id="@+id/iv_sex"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_woman"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>



        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_attention"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_28"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_line"
            android:gravity="center"
            android:text="@string/add_attention"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/color_fc5a8e" />
    </LinearLayout>

</LinearLayout>