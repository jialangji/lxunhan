<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_login"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        
        <ImageView
            android:layout_width="@dimen/dp_135"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_height="@dimen/dp_145"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_unlogin_bg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_9"
            android:text="@string/login_look"/>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="@dimen/dp_145"
            android:layout_height="@dimen/dp_36"
            android:text="@string/now_login"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_45"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:background="@drawable/shape_radius_pink"/>
    </LinearLayout>

    <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_video"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>


</RelativeLayout>