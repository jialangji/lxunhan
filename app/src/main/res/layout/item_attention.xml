<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/shape_radius_10"
    android:layout_marginTop="@dimen/dp_10"
    android:padding="@dimen/dp_15"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_iv"
        android:layout_width="@dimen/dp_46"
        android:layout_height="@dimen/dp_46">
        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_my_select"
            />
        <ImageView
            android:id="@+id/iv_v"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_yellow_v"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_toEndOf="@id/rl_iv"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_303133"
                android:text="张三"
                android:textSize="@dimen/sp_16"
                />
            <ImageView
                android:id="@+id/iv_sex"
                android:layout_toEndOf="@id/tv_name"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_woman"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_fans_count"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:text="粉丝20"
            android:textColor="@color/color_b2"
            />

    </LinearLayout>
    <TextView
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_28"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:background="@drawable/shape_radius_pink"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        android:text="@string/attention_to"
        />

</RelativeLayout>