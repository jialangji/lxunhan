<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15"
    android:id="@id/ll_comment"
    android:paddingTop="@dimen/dp_20"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_iv"
            android:layout_width="@dimen/dp_36"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_height="@dimen/dp_36">
            <ImageView
                android:id="@+id/iv_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_my_select"
                />
            <ImageView
                android:id="@+id/iv_v"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_yellow_v"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_line"
            android:layout_toEndOf="@id/rl_iv"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_303133"
                    android:text="张三"
                    android:textSize="@dimen/sp_16"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:text="上山打老虎"
                android:textColor="@color/color_b2"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_line"
            android:layout_width="match_parent"
            android:layout_below="@id/ll_line"
            android:layout_toEndOf="@id/rl_iv"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_b2"
                android:textSize="@dimen/sp_10"
                android:text="03-21 15:16"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_like"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:src="@drawable/ic_unlike_hand"/>
                    <TextView
                        android:id="@+id/tv_like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:text="300"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_comment"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_comment"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:src="@drawable/ic_comment_normal"/>
                    <TextView
                        android:id="@+id/tv_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:text="300"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/rl_iv"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:background="@drawable/shape_type_gray"
            android:layout_below="@id/rl_line"
            android:textSize="@dimen/sp_12"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@id/tv_reply"
            android:background="@color/color_f2"/>
    </RelativeLayout>
</LinearLayout>