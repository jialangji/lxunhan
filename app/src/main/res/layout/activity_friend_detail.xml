<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_scrollFlags="scroll"
    android:orientation="vertical"
    tools:context=".ui.public_ac.activity.FriendDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/view_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/bg_gradient"
            android:padding="@dimen/dp_15">

            <RelativeLayout
                android:id="@+id/rl_finish"
                android:layout_width="@dimen/dp_15"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_write_finish" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_more"
                android:layout_width="@dimen/dp_20"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_three_point" />
            </RelativeLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_140"
                android:background="@drawable/bg_gradient">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_206"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_50"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:background="@drawable/bottom_layer"
                    android:paddingBottom="@dimen/dp_4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_radius_10"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_15">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_attention"
                                android:layout_width="@dimen/dp_94"
                                android:layout_height="@dimen/dp_28"
                                android:layout_toStartOf="@id/ll_chat"
                                android:background="@drawable/shape_radius_pink_line10"
                                android:gravity="center"
                                android:text="@string/add_attention"
                                android:textColor="@color/color_fc5a8e"
                                android:textSize="@dimen/sp_10" />

                            <LinearLayout
                                android:id="@+id/ll_chat"

                                android:layout_width="@dimen/dp_94"
                                android:layout_height="@dimen/dp_28"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="@dimen/dp_12"
                                android:background="@drawable/shape_radius_pink_10"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/dp_10"
                                    android:layout_height="@dimen/dp_10"
                                    android:src="@drawable/ic_white_im" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp_2"
                                    android:text="@string/user_im"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_10" />
                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="name"
                                android:textColor="@color/color_303133"
                                android:textSize="@dimen/sp_22" />

                            <ImageView
                                android:id="@+id/iv_sex"
                                android:layout_width="@dimen/dp_12"
                                android:layout_height="@dimen/dp_12"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dp_4"
                                android:src="@drawable/ic_man" />

                            <TextView
                                android:id="@+id/tv_age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dp_4"
                                tools:text="22"
                                android:textColor="@color/color_b2"
                                android:textSize="@dimen/sp_12" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_media"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_25"
                                android:background="@drawable/shape_type_gray"
                                android:drawableStart="@drawable/ic_yellow_v"
                                android:drawablePadding="@dimen/dp_2"
                                android:gravity="center"
                                android:layout_marginEnd="@dimen/dp_20"
                                tools:text="自媒体人"
                                android:textColor="@color/color_78"
                                android:textSize="@dimen/sp_12" />

                            <TextView
                                android:id="@+id/tv_address"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_25"
                                android:background="@drawable/shape_type_gray"
                                android:gravity="center"
                                tools:text="自媒体人"
                                android:textColor="@color/color_78"
                                android:textSize="@dimen/sp_12" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ll_like"
                                android:layout_width="@dimen/dp_0"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_like_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="78"
                                    android:textColor="@color/color_303133"
                                    android:textSize="@dimen/sp_16" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_3"
                                    android:text="@string/like"
                                    android:textColor="@color/color_b2"
                                    android:textSize="@dimen/sp_12" />
                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/dp_05"
                                android:layout_height="@dimen/dp_26"
                                android:layout_gravity="center"
                                android:background="@color/color_ec" />

                            <LinearLayout
                                android:id="@+id/ll_fans"
                                android:layout_width="@dimen/dp_0"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_fans_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="78"
                                    android:textColor="@color/color_303133"
                                    android:textSize="@dimen/sp_16" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_3"
                                    android:text="@string/fans"
                                    android:textColor="@color/color_b2"
                                    android:textSize="@dimen/sp_12" />
                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/dp_05"
                                android:layout_height="@dimen/dp_26"
                                android:layout_gravity="center"
                                android:background="@color/color_ec" />

                            <LinearLayout
                                android:id="@+id/ll_attention"
                                android:layout_width="@dimen/dp_0"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_attention_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="78"
                                    android:textColor="@color/color_303133"
                                    android:textSize="@dimen/sp_16" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_3"
                                    android:text="@string/attention"
                                    android:textColor="@color/color_b2"
                                    android:textSize="@dimen/sp_12" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_header"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_100"
                    android:layout_marginStart="@dimen/dp_30"
                    android:src="@drawable/ic_man" />
            </RelativeLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"

            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/shape_white_bg_10"
            android:orientation="vertical">

            <android.support.design.widget.TabLayout
                android:id="@+id/tl_label"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                app:tabIndicatorFullWidth="false"
                app:tabRippleColor="@android:color/transparent"
                app:tabSelectedTextColor="@color/color_fc5a8e"
                app:tabTextAppearance="@style/TabTextSize2"
                app:tabTextColor="@color/color_303133">
            </android.support.design.widget.TabLayout>

            <com.ay.lxunhan.widget.NoScrollViewPager
                android:id="@+id/view_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </com.ay.lxunhan.widget.NoScrollViewPager>
        </LinearLayout>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>