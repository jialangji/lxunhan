<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_303133"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_operate"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_100"
        />

    <TextView
        android:id="@+id/tv_operate_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="name"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="@dimen/dp_34"
        android:text="@string/live_finish"
        />
    <View
        android:layout_width="@dimen/dp_170"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_b2"
        android:layout_marginTop="@dimen/dp_10"/>
    <TextView
        android:id="@+id/tv_finish_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="tip"
        android:textColor="@color/white" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_b2"
        android:layout_marginTop="@dimen/dp_2"
        android:textSize="@dimen/sp_12"
        android:text="@string/live_time"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/btn_finish_back"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_150"
        android:layout_marginEnd="@dimen/dp_25"
        android:gravity="center"
        android:textSize="@dimen/sp_18"
        android:background="@drawable/shape_radius_pink_big"
        android:layout_height="@dimen/dp_50"
        android:textColor="@color/white"
        android:text="@string/back" />
</LinearLayout>