<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_label"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        app:tabIndicatorFullWidth="false"
        app:tabRippleColor="@android:color/transparent"
        app:tabSelectedTextColor="@color/color_fc5a8e"
        app:tabTextAppearance="@style/TabTextSize"
        app:tabTextColor="@color/color_303133">
    </android.support.design.widget.TabLayout>
    <com.ay.lxunhan.widget.NoScrollViewPager
        android:layout_below="@id/tl_label"
        android:id="@+id/view_page_live"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.ay.lxunhan.widget.NoScrollViewPager>

    <ImageView
        android:id="@+id/iv_open_live"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_130"
        android:src="@drawable/ic_new_open_live"
        />

</RelativeLayout>